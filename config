# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=$SCRIPT_DIR/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

[i3-focusedwindow]
label= 
interval=persist

# Battery indicator
#
# The battery instance defaults to 0.
[batterybar]
markup=pango
interval=3
BAT_NUMBER=0

# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[volume-pipewire]
interval=persist
SUBSCRIBE=1
USE_ALSA_NAME=1
signal=1
#MIXER=[determined automatically]
#SCONTROL=[determined automatically]
##exposed format variables: ${SYMB}, ${VOL}, ${INDEX}, ${NAME}
LONG_FORMAT="${SYMB} ${VOL}%"
SHORT_FORMAT="${SYMB}"
AUDIO_HIGH_SYMBOL=
AUDIO_MED_THRESH=50
AUDIO_MED_SYMBOL=
AUDIO_LOW_THRESH=20
AUDIO_LOW_SYMBOL=
AUDIO_MUTED_SYMBOL=
AUDIO_DELTA=5
#DEFAULT_COLOR="#ffffff"
#MUTED_COLOR="#a0a0a0"
#USE_ALSA_NAME=0
#USE_DESCRIPTION=0
## SUBSCRIBE=1 requires interval=persist and always uses LONG_FORMAT
#SUBSCRIBE=0

# Temperature
#
# Support multiple chips, though lm-sensors.
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[temperature]
interval=3
T_WARN=70
T_CRIT=90

[usb]
markup=pango
signal=1
interval=3
IGNORE_LIST=["nvme0n1p1", "nvme0n1p2", "nvme0n1p3"]
#IGNORE_LIST=["sdd1", "mapper/sda1_crypt"]
#INFO_TEXT_COLOR=white
#MOUNTED_COLOR=green
#PLUGGED_COLOR=gray
#LOCKED_COLOR=gray
#UNLOCKED_NOT_MOUNTED_COLOR=yellow
#PARTITIONLESS_COLOR=red
#PARTITIONLESS_TEXT=no partitions
#SEPARATOR=<span color='gray'> | </span>
#LOCKED_INDICATOR=
#UNLOCKED_INDICATOR=
#READONLY_INDICATOR=ro
#TRUNCATE_FS_LABELS=[not set by default, accepts +/- integers]


# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
# [iface]
# #IFACE=wlan0
# color=#00FF00
# interval=10
# separator=false
# display_wifi_name=1

[wifi]
interval=1
separator=false
label= 

[bandwidth]
interval=3
INLABEL=󰱦 
OUTLABEL=󰳘 

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label= 
separator=false
interval=3

[memory]
instance=swap
interval=3

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
# [disk]
# label=HOME
# #DIR=/mnt/data
# interval=30

[disk-io]
interval=persist
markup=pango
instance=nvme
#DT=5
#MB_ONLY=0 #0 or 1
#KB_ONLY=0 #0 or 1
#WIDTH=3
#MB_PRECISION=1
#KB_PRECISION=0
#REGEX=/^(s|h)d[a-zA-Z]+/
THRESHOLD=0
#WARN_COLOR="#FF0000"
label= 
SEPARATOR= 
#PREFIX=
#SUFFIX="B/s"

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label= 
interval=3
#min_width=CPU 100.00%
separator=false
COLOR_NORMAL=#FFFFFF
COLOR_WARN=#FFFC00
COLOR_CRIT=#FF0000
T_WARN=50
T_CRIT=80
DECIMALS=2

[load_average]
interval=3

# Date Time
#
[time]
command=date
interval=1

